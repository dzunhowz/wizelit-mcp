# =============================================================================
# Wizelit MCP Servers - Environment Variables Template
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
# AWS credentials (required for Bedrock access)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=ap-southeast-2
AWS_DEFAULT_REGION=ap-southeast-2

# AWS Bedrock Model Configuration
CHAT_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0

# AWS Bedrock Defaults (optional - fallback values)
DEFAULT_AWS_REGION=us-east-1
DEFAULT_BEDROCK_MODEL=anthropic.claude-3-haiku-20240307-v1:0

# -----------------------------------------------------------------------------
# GitHub Configuration (optional)
# Required for Code Scout to access private repositories
# -----------------------------------------------------------------------------
GITHUB_TOKEN=your_github_token

# GitHub Cache Configuration (optional)
GITHUB_CACHE_DIR=/tmp/github_cache
GITHUB_CACHE_MAX_AGE_HOURS=24
GITHUB_CACHE_MAX_SIZE_MB=5000

# -----------------------------------------------------------------------------
# Code Scout Configuration (optional)
# -----------------------------------------------------------------------------
CODE_SCOUT_USE_CACHE=true

# -----------------------------------------------------------------------------
# Redis Configuration (optional)
# For real-time log streaming in Refactoring Agent
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
ENABLE_LOG_STREAMING=true

# -----------------------------------------------------------------------------
# Job Configuration (optional)
# -----------------------------------------------------------------------------
JOB_LOG_TAIL=25

# -----------------------------------------------------------------------------
# CrewAI Configuration (optional)
# Used by Refactoring Agent
# -----------------------------------------------------------------------------
CREWAI_TIMEOUT_SECONDS=120

# -----------------------------------------------------------------------------
# Database Configuration (optional)
# Only needed if using database persistence for Refactoring Agent
# Database is optional - Refactoring Agent works without it
# -----------------------------------------------------------------------------
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600
# DB_ECHO_SQL=false

# -----------------------------------------------------------------------------
# ngrok Configuration (optional)
# Only needed for local development with ngrok tunnels
# Get your authtoken from: https://dashboard.ngrok.com/get-started/your-authtoken
# -----------------------------------------------------------------------------
# NGROK_AUTHTOKEN=your_ngrok_authtoken
